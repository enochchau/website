---
interface Props {
  active?: string;
  items: { label: string; value: string }[];
}

const { active, items } = Astro.props as Props;
---

<nav>
  {
    items.map((item) => (
      <h3>
        <a
          href={"/" + item.value}
          class={active === item.label ? "current-nav" : ""}
        >
          {item.label}
        </a>
      </h3>
    ))
  }
</nav>

<style lang="scss">
  .current-nav {
    text-decoration: underline;
    text-decoration-color: var(--secondary);
  }

  h3 {
    font-weight: bold;
    > a {
      color: var(--primary);
    }
  }

  nav {
    display: flex;
    gap: 12px;
  }
</style>
