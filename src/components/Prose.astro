<article class={"md"}>
  <slot />
</article>

<style is:global>
  article.md {
    font-family: sans-serif;
    pre.astro-code {
      > code {
        background-color: unset;
        border-radius: unset;
        padding: unset;
      }
    }

    a:visited {
      color: light-dark(var(--color-gray-500), var(--color-gray-300));
    }

    > * {
      margin: 16px 0;
    }

    p {
      line-height: 1.5rem;
    }

    th,
    td {
      font-size: var(--text-s);
    }
    th {
      font-weight: bold;
    }

    em {
      font-style: italic;
    }
    code {
      font-family:
        Menlo,
        Consolas,
        Monaco,
        Adwaita Mono,
        Liberation Mono,
        Lucida Console,
        monospace;
      background-color: light-dark(
        var(--color-gray-200),
        var(--color-gray-600)
      );
      padding: 0 2px;
      border-radius: 2px;
    }
    .astro-code {
      padding: 8px;
      border-radius: 4px;
    }

    ul {
      list-style-type: disc;
      list-style-position: inside;
    }

    ul ul {
      list-style-type: circle;
      margin-left: 15px;
      margin-top: 2px;
    }
    ul ul ul {
      list-style-type: square;
      margin-left: 15px;
      margin-top: 2px;
    }

    ol {
      list-style-type: decimal;
      list-style-position: inside;
    }

    ol ol {
      list-style-type: lower-alpha;
      margin-left: 15px;
      margin-top: 2px;
    }

    ol ol ol {
      list-style-type: lower-roman;
      margin-left: 15px;
      margin-top: 2px;
    }
  }
</style>
