<article class={"md"}>
  <slot />
</article>

<style is:global>
  article.md {
    font-family: sans-serif;
    pre.astro-code {
      > code {
        background-color: unset;
        border-radius: unset;
        padding: unset;
      }
    }

    h1,
    h2,
    h3,
    h4 {
      font-weight: bold;
      margin-bottom: 18px;
    }

    a:visited {
      color: light-dark(var(--color-gray-500), var(--color-gray-300));
    }

    > * {
      margin: 16px 0;
    }

    p {
      line-height: 1.5rem;
    }

    th,
    td {
      font-size: var(--text-s);
    }
    th {
      font-weight: bold;
    }

    em {
      font-style: italic;
    }
    code {
      font-family: var(--font-mono);
      background-color: light-dark(
        var(--color-gray-200),
        var(--color-gray-600)
      );
      padding: 0 2px;
      border-radius: 2px;
      line-height: 1.4;
    }
    .astro-code {
      padding: 8px;
      border-radius: 4px;
      font-size: var(--text-s);
      code {
        line-height: 1.35;
      }
    }
    li {
      line-height: 1.2rem;
    }

    ul {
      list-style-type: disc;
      list-style-position: outside;
      padding-left: 1.5rem;
    }

    ul ul {
      list-style-type: circle;
    }
    ul ul ul {
      list-style-type: square;
    }

    ol {
      list-style-type: decimal;
      list-style-position: outside;
      padding-left: 1.5rem;
    }

    ol ol {
      list-style-type: lower-alpha;
    }

    ol ol ol {
      list-style-type: lower-roman;
    }
    ul.contains-task-list {
      list-style: none;
      padding-left: 0;
    }
    blockquote {
      background: light-dark(var(--color-gray-200), var(--color-gray-700));
      padding: 1rem;
      margin: 1rem 0;
      font-style: italic;
      border-left: 1px solid var(--color-gray-400);
    }

    sup {
      font-size: 0.7em;
      line-height: 0;
      vertical-align: super;
    }
    sup a {
      text-decoration: none;
      font-weight: bold;
      margin-left: 2px;
      transition: color 0.2s ease-in-out;
    }
    sup a:hover {
      text-decoration: underline;
    }

    hr {
      border: none;
      border-top: 1px solid var(--color-gray-400);
    }
    details {
      border: 1px solid var(--color-gray-400);
      border-radius: 4px;
      padding: 8px;
    }
    details[open] {
      >:first-child {
        margin-top: 0;
      }
      >:last-child {
        margin-bottom: 0;
      }
      > * {
        margin: 16px 0;
      }
    }
    strong {
      font-weight: bold;
    }
  }
</style>
