---
// props are any iframe html attributes
const props = Astro.props;
---

<div>
  <iframe {...props}></iframe>
</div>

<style lang="scss">
  div {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    margin-bottom: 16px;

    > iframe {
      height: 100%;
      width: 100%;
      position: absolute;
      top: 0;
      left: 0;
    }
  }
</style>
