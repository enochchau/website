---
import { Image } from "astro:assets";

interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
}

const { src, alt, width = 800, height = 0 } = Astro.props as Props;
---

<Image
  src={src}
  alt={alt}
  format="webp"
  width={width}
  height={height}
  class={Astro.props.class ?? "w-full h-auto"}
/>
