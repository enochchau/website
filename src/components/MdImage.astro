---
import { Image } from "astro:assets";

interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
}

const { src, alt, width = 800, height = 0 } = Astro.props as Props;
---

<Image src={src} alt={alt} format="webp" width={width} height={height} />

<style lang="scss">
  img {
    width: 100%;
    height: auto;
  }
</style>
