---
import { Image } from "astro:assets";

interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  class?: string;
  portrait?: boolean;
}

const { portrait, src, alt, width = 800, height = 0 } = Astro.props as Props;
---

<Image
  src={src}
  alt={alt}
  format="webp"
  width={width}
  height={height}
  class={Astro.props.class
    ? Astro.props.class
    : portrait
      ? "portrait"
      : "image"}
/>

<style>
  .image {
    width: 100%;
    height: auto;
  }
  .portrait {
    display:block;
    width: 360px;
    margin-left: auto;
    margin-right: auto;
    height: auto;
  }
</style>
